<% post_type = post.escape("title").length === 0 ? "new" : "edit" %>

<h1> <%= (post_type === "new") ? "New Post" : "Edit Post" %> </h1>

<form>

<label id="post-title">Title</label>
<input type="text" name="post[title]" value="<%= post.escape('title') %>">
<br>

<label id="post-body">Body</label>
<input type="text" name="post[body]" value ="<%= post.escape('body') %>">
<br>

<input type="submit" data-id="<%= post.id %>" 
value=<%= (post_type === "new") ? "Create Post" : "Edit Post" %>>

</form>
